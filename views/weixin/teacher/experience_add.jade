extends ./parent.jade

block style
    link(rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css")
    script(src="//code.jquery.com/jquery-1.10.2.js")
    script(src="//code.jquery.com/ui/1.11.4/jquery-ui.js")


block header-title
    | 添加经历

block content
    input(id="teacherId",type="hidden", value="#{user.id}")
    input(id="userId",type="hidden", value="#{user.userId}")
    input(id="openId",type="hidden", value="#{user.openId}")
    input(id="kind",type="hidden", value="#{kind}")
    div.add-line
        span.show-text 工作名称
        input#name(type="text").name
    div.add-line
        span.show-text 在职时间
        input#startTime(type="text").date
        | &nbsp;&nbsp;-&nbsp;&nbsp;
        input#endTime(type="text").date
    div.textarea
        span.show-text 工作描述（至少15字）
        textarea#description(placeholder="简要描述工作内容")

    #saveExp.button
        img(src="/images/correct.png")
        span 保存经历

block script
    script.
        $(function () {
            $("#startTime, #endTime").datepicker({
                autoSize: true,
                constrainInput: true,
                dateFormat: 'yy-mm-dd',
                gotoCurrent: true,
                monthNames: ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月'
                    , '十月', '十一月', '十二月']
            });

            $('#saveExp').click(function () {
                var name = $('#name').val();
                var startTime = $('#startTime').val();
                var endTime = $('#endTime').val();
                var description = $('#description').val();
                var kind = $('#kind').val();

                if (!name) {
                    alert('工作名称不能为空！');
                    $('#name').focus();
                    return;
                }
                if (endTime < startTime) {
                    alert('在职结束时间应大于开始时间！');
                    $('#endTime').focus();
                    return;
                }
                if (description.length < 15) {
                    alert('工作描述至少15个字！');
                    $('#description').focus();
                    return;
                }
                $.ajax({
                    url: '/weixin/teacher/experience/save',
                    data: {
                        kind: kind,
                        name: name,
                        startTime: startTime,
                        endTime: endTime,
                        description: description
                    },
                    type: 'post',
                    dataType: 'json',
                    success: function (result) {
                        alert(result.message);
                        if (result.success) {
                            window.location.href = '/weixin/teacher/experience/' + result.entity
                        }
                    }
                });
            });

        });