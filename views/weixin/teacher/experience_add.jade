extends ./parent.jade

block header-title
    | 添加经历

block content
    input(id="kind",type="hidden", value="#{kind}")
    div.add-line
        span.show-text 工作名称
        input#name(type="text").name
    div.add-line
        span.show-text 在职时间
        input#startTime(type="text").date
        | &nbsp;&nbsp;-&nbsp;&nbsp;
        input#endTime(type="text").date
    div.textarea
        span.show-text 工作描述（至少15字）
        textarea#description(placeholder="简要描述工作内容")

    #saveExp.button
        img(src="/images/correct.png")
        span 保存经历

block script
    script.
        $(function () {
            var now = new Date();
            var currYear = now.getFullYear();
            var opt = {};
            opt.date = {preset: 'date'};
            opt.default = {
                theme: 'android-ics light', //皮肤样式
                display: 'modal', //显示方式
                mode: 'scoller', //日期选择模式
                lang: 'zh',
                startYear: currYear - 20, //开始年份
                endYear: currYear //结束年份
            };

            $("#startTime").val('').scroller().scroller($.extend(opt['date'], opt['default']));
            $("#endTime").val('').scroller().scroller($.extend(opt['date'], opt['default']));

            $('#saveExp').click(function () {
                var name = $('#name').val();
                var startTime = $('#startTime').val();
                var endTime = $('#endTime').val();
                var description = $('#description').val();
                var kind = $('#kind').val();

                if (!name) {
                    alert('工作名称不能为空！');
                    $('#name').focus();
                    return;
                }
                if (endTime < startTime) {
                    alert('在职结束时间应大于开始时间！');
                    $('#endTime').focus();
                    return;
                }
                if (description.length < 15) {
                    alert('工作描述至少15个字！');
                    $('#description').focus();
                    return;
                }
                $.ajax({
                    url: '/weixin/teacher/experience/save',
                    data: {
                        kind: kind,
                        name: name,
                        startTime: startTime,
                        endTime: endTime,
                        description: description,
                        teacherId: #{userIds.teacherId}
                    },
                    type: 'post',
                    dataType: 'json',
                    success: function (result) {
                        alert(result.message);
                        if (result.success) {
                            window.location.href = '/weixin/teacher/experience/' + result.entity + '?openId=#{userIds.openId}';
                        }
                    }
                });
            });

        });