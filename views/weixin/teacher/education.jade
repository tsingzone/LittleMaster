extends ./parent.jade
block header-title
    | 学历选择
block content
    each val in educations.length ? educations : ["暂无数据"]
        if val.id
            div.bottom-line.one-line(id="#{val.id}")= val.name

        else
            div.no-result= val

block script
    script.
        $(function () {
            $('div.one-line').each(function () {
                $(this).click(function () {
                    sessionStorage.setItem('education', $(this).html());
                    window.location.href = '/weixin/teacher/profile';
                });
            });
        });