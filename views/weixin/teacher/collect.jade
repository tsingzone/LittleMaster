extends ./parent.jade

block header-back
    img#back(src="/images/left-arrow.png")
block header-title
    | 已收藏兼职

block content
    #job_list(style='margin-top:0;')
        if jobList
            for job in jobList
                .job(job-id="#{job.jobId}")
                    .job_type
                        | #{job.position}
                    .job_content
                        .job_time
                            - var getDate = function(date) {
                            -       return (date.getYear() + 1900) + '/' + (date.getMonth()+1) + '/' + date.getDate()
                            -    }
                            - var start = getDate(job.startTime);
                            - var end = getDate(job.endTime);
                            | 工作日期: #{start}-#{end}
                        .job_title #{job.title}
                        .job_others
                            | #{job.address} &nbsp;
                            case job.gender
                                when 0
                                    | 男性 &nbsp;
                                when 1
                                    | 女性 &nbsp;
                                when 2
                                    | 性别不限 &nbsp;
                            | #{job.settlement} &nbsp;
                            .job_price #{job.salary} #{job.salaryType}
        else
            div.no-result
                | 尚未收藏兼职
block script
    script.
        $(function () {
            sessionStorage.setItem("teacherId", "#{userIds.teacherId}");
            sessionStorage.setItem("openId", "#{userIds.openId}");
        });
        $(document).on("click", ".job", function () {
            var jobId = $(this).attr("job-id");
            location.href = "/weixin/company/profile?jobId=" + jobId + "&teacherId=#{userIds.teacherId}";
        });